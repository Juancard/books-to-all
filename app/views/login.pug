extends skeleton.pug

block content
  .container
    .row
      .col-md-offset-4.col-md-4.text-success
        h1
          span.glyphicon.glyphicon-log-in
          |  Login
        hr
        // LOGIN FORM
        form(name="loginForm", action='/login', method='post')
          if (message && message.length > 0)
            p#alert-message.alert.alert-danger #{message}
          .form-group
            label(for="email") Email
            input.form-control(type='email', name='email', tabindex='1', required, autofocus='true')
          .form-group
            label(for="password") Password
            input.form-control(type='password', name='password', tabindex='2', required)
          br
          button.btn.btn-success.btn-lg.btn-block(type='submit', tabindex='3') Login
