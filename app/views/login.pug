extends skeleton.pug

block content
  .container
    .row.col-md-offset-3.col-md-6.text-success
      h1
        span.glyphicon.glyphicon-log-in
        |  Login
      hr
      // LOGIN FORM
      form(name="loginForm", action='/login', method='post')
        if (message && message.length > 0)
          p#alert-message.alert.alert-danger #{message}
        .form-group
          label(for="email") Email
          input.form-control(type='text', name='email', tabindex='2', required)
        .form-group
          label(for="password") Password
          input.form-control(type='password', name='password', tabindex='3', required)
        hr
        button.btn.btn-success.btn-lg.btn-block(type='submit', tabindex='4')
          span.glyphicon.glyphicon-log-in
