extends skeleton.pug

block content
  .container
    .row
      .col-md-offset-4.col-md-4.text-primary
        h1.text-primary
          span.fa.fa-sign-in
          |  Signup
        hr
        // LOGIN FORM
        form(name="signupForm", action='/signup', method='post')
          if (message && message.length > 0)
            p#alert-message.alert.alert-danger #{message}
          .form-group
            label(for="displayName") Complete name
            input.form-control(type='text', name='displayName', autofocus='true', tabindex='1', required)
          .form-group
            label(for="email") Email
            input.form-control(type='email', name='email', tabindex='2', required)
          .form-group
            label(for="password") Password
            input.form-control(type='password', name='password', tabindex='3', required)
          br
          button.btn.btn-primary.btn-lg.btn-block(type='submit', tabindex='4') Signup
