extends skeleton.pug

block append html_js
  script(src="/public/js/modernizr.js")

block append css
  link(href='/public/css/books.css', rel='stylesheet', type="text/css")

block content
  header.row
    .container
      h2 My Books
      .row
        form(name="addBookForm").col-md-4.col-md-offset-8
          .input-group
            input.form-control(type="text", name='book', placeholder="Search & add books", tabindex='1', required)
            span.input-group-btn
              button.btn.btn-default(type="submit", tabindex='2')
                span.glyphicon.glyphicon-search
  .container
    include book.pug
    -let booksLength = books.length
    if books.length <= 0
      #noBooks.jumbotron.jumbotron-fluid
        h3.display-3.text-muted.text-center No books added

block append js
  script(type="text/javascript", src="/controllers/book.client.js")
