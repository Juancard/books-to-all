extends skeleton.pug

block content
  .container
    h3 My Books
    hr
    .row
      .col-md-6.col-md-offset-3
        form(name="addBookForm")
          .form-group
            label(for="book") Add Book
            input.form-control(type='text', name='book', placeholder="Moby Dick", tabindex='1', required, autofocus='true')
          button.btn.btn-success.btn-block(type='submit', tabindex='2')
            span.glyphicon.glyphicon-send
            |  Add
    hr
    include book.pug

block append js
  script(src="/controllers/book.client.js")
