extends ../../skeleton.pug

block content
  br
  .row
    .col-md-6
      .panel.panel-info
        .panel-heading
          h3.panel-title Update Location
        .panel-body
          p#locationMessage(hidden='')
          form(name="locationForm")
            .form-group
              label(for="city") City
              -let city = (location && location.city)? location.city : '';
              input.form-control(type='text', name='city', value=city, placeholder='Austin', tabindex='1', required, autofocus='true')
            .form-group
              label(for="state") State
              -let state = (location && location.state)? location.state : '';
              input.form-control(type='text', name='state', value=state, placeholder='Texas', tabindex='2', required)
            button.btn.btn-success.btn-lg.btn-block(type='submit', tabindex='3')
              span.glyphicon.glyphicon-send
              |  Update

    .col-md-6
      .panel.panel-warning
        .panel-heading
          h3.panel-title Update Password
        .panel-body
          p#passwordMessage(hidden='')
          form(name="passwordForm")
            .form-group
              label(for="currentPassword") Current Password
              input.form-control(type='password', name='currentPassword', tabindex='4', required)
            .form-group
              label(for="newPassword") New Password
              input.form-control(type='password', name='newPassword', tabindex='5', required)
            button.btn.btn-success.btn-lg.btn-block(type='submit', tabindex='6')
              span.glyphicon.glyphicon-send
              |  Update

block append js
  script(src="/controllers/profile.client.js")
